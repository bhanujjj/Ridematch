{
    "annotations": {
        "list": [
            {
                "builtIn": 1,
                "datasource": "-- Grafana --",
                "enable": true,
                "hide": true,
                "iconColor": "rgba(0, 211, 255, 1)",
                "name": "Annotations & Alerts",
                "type": "dashboard"
            }
        ]
    },
    "editable": true,
    "graphTooltip": 0,
    "id": null,
    "links": [],
    "liveNow": false,
    "panels": [
        {
            "id": 1,
            "type": "timeseries",
            "title": "Request Latency (p50 & p95)",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "s",
                    "color": {
                        "mode": "palette-classic"
                    }
                },
                "overrides": []
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "histogram_quantile(0.95, sum(rate(match_request_latency_seconds_bucket[1m])) by (le))",
                    "legendFormat": "p95 latency"
                },
                {
                    "refId": "B",
                    "expr": "histogram_quantile(0.50, sum(rate(match_request_latency_seconds_bucket[1m])) by (le))",
                    "legendFormat": "p50 latency"
                }
            ]
        },
        {
            "id": 2,
            "type": "timeseries",
            "title": "Error Rate (per sec)",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps",
                    "color": {
                        "mode": "palette-classic"
                    }
                },
                "overrides": []
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "rate(match_errors_total[1m])",
                    "legendFormat": "error_rate"
                }
            ]
        },
        {
            "id": 3,
            "type": "heatmap",
            "title": "Prediction Score Distribution",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "palette-classic"
                    }
                },
                "overrides": []
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "sum(rate(prediction_scores_bucket[1m])) by (le)",
                    "format": "heatmap",
                    "legendFormat": "{{le}}"
                }
            ]
        },
        {
            "id": 4,
            "type": "timeseries",
            "title": "Missing Features (per sec)",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 8
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "events/sec",
                    "color": {
                        "mode": "palette-classic"
                    }
                },
                "overrides": []
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "rate(feature_missing_total[1m])",
                    "legendFormat": "missing_features"
                }
            ]
        },
        {
            "id": 5,
            "type": "gauge",
            "title": "Feature Drift Score (p95 Delta)",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 16
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 0.1
                            },
                            {
                                "color": "red",
                                "value": 0.2
                            }
                        ]
                    },
                    "min": 0,
                    "max": 1
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "feature_drift_score",
                    "legendFormat": "{{feature_name}}"
                }
            ]
        },
        {
            "id": 6,
            "type": "heatmap",
            "title": "Feature Value Distributions",
            "datasource": "Prometheus",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 16
            },
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "scheme",
                        "scheme": "Spectral"
                    }
                }
            },
            "targets": [
                {
                    "refId": "A",
                    "expr": "sum(rate(feature_values_bucket[5m])) by (le)",
                    "format": "heatmap",
                    "legendFormat": "{{le}}"
                }
            ]
        }
    ],
    "refresh": "5s",
    "schemaVersion": 38,
    "style": "dark",
    "tags": [],
    "templating": {
        "list": []
    },
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "timezone": "",
    "title": "RideMatch API Monitor (Production)",
    "uid": "ridematch-monitor",
    "version": 1
}